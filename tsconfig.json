{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "noImplicitAny": false,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
          "node_modules/*"
      ]
    },
    "lib": [
      "es6",
      "esnext"
    ]
  },
  "include": [
    "./",
  ]
}
